--// Load Spawner
local Spawner = loadstring(game:HttpGet("https://gitlab.com/darkdark/dark/-/raw/main/Spawner.lua"))()

--// GUI Setup
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local UIStroke = Instance.new("UIStroke")
local Title = Instance.new("TextLabel")
local MinimizeButton = Instance.new("TextButton")
local MadeBy = Instance.new("TextLabel")

ScreenGui.Parent = game:GetService("CoreGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
Frame.Position = UDim2.new(0.3, 0, 0.3, 0)
Frame.Size = UDim2.new(0, 350, 0, 300)
Frame.Active = true
Frame.Draggable = true

UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = Frame

UIStroke.Thickness = 2
UIStroke.Color = Color3.fromRGB(255, 255, 255)
UIStroke.Parent = Frame

Title.Parent = Frame
Title.BackgroundTransparency = 1
Title.Size = UDim2.new(1, -40, 0, 30)
Title.Position = UDim2.new(0, 10, 0, 5)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "Spawner GUI"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 20

MinimizeButton.Parent = Frame
MinimizeButton.Size = UDim2.new(0, 30, 0, 30)
MinimizeButton.Position = UDim2.new(1, -35, 0, 5)
MinimizeButton.Text = "-"
MinimizeButton.TextScaled = true
MinimizeButton.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)

MadeBy.Parent = Frame
MadeBy.BackgroundTransparency = 1
MadeBy.Size = UDim2.new(1, 0, 0, 20)
MadeBy.Position = UDim2.new(0, 0, 1, -20)
MadeBy.Font = Enum.Font.SourceSansItalic
MadeBy.Text = "Made by Siva"
MadeBy.TextColor3 = Color3.fromRGB(255, 255, 255)
MadeBy.TextSize = 14

--// Tabs
local TabsFrame = Instance.new("Frame")
TabsFrame.Parent = Frame
TabsFrame.Size = UDim2.new(1, -20, 0, 30)
TabsFrame.Position = UDim2.new(0, 10, 0, 40)
TabsFrame.BackgroundTransparency = 1

local TabLayout = Instance.new("UIListLayout")
TabLayout.FillDirection = Enum.FillDirection.Horizontal
TabLayout.Padding = UDim.new(0, 5)
TabLayout.Parent = TabsFrame

local ContentFrame = Instance.new("Frame")
ContentFrame.Parent = Frame
ContentFrame.Size = UDim2.new(1, -20, 1, -90)
ContentFrame.Position = UDim2.new(0, 10, 0, 80)
ContentFrame.BackgroundTransparency = 1

local Tabs = {}
local function CreateTab(name)
    local Button = Instance.new("TextButton")
    Button.Parent = TabsFrame
    Button.Size = UDim2.new(0, 100, 1, 0)
    Button.BackgroundColor3 = Color3.fromRGB(150, 0, 0)
    Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    Button.Text = name
    Button.TextScaled = true

    local UIC = Instance.new("UICorner")
    UIC.CornerRadius = UDim.new(0, 8)
    UIC.Parent = Button

    local TabContent = Instance.new("ScrollingFrame")
    TabContent.Parent = ContentFrame
    TabContent.Size = UDim2.new(1, 0, 1, 0)
    TabContent.BackgroundTransparency = 1
    TabContent.ScrollBarThickness = 6
    TabContent.Visible = false

    local List = Instance.new("UIListLayout")
    List.Parent = TabContent
    List.Padding = UDim.new(0, 4)

    Tabs[name] = {Button = Button, Frame = TabContent}

    Button.MouseButton1Click:Connect(function()
        for _, t in pairs(Tabs) do
            t.Frame.Visible = false
        end
        TabContent.Visible = true
    end)

    return TabContent
end

--// Button Creator
local function CreateItemButton(parent, name, callback)
    local Btn = Instance.new("TextButton")
    Btn.Parent = parent
    Btn.Size = UDim2.new(1, -5, 0, 30)
    Btn.BackgroundColor3 = Color3.fromRGB(180, 0, 0)
    Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    Btn.Text = name
    Btn.TextScaled = true

    local UIC = Instance.new("UICorner")
    UIC.CornerRadius = UDim.new(0, 6)
    UIC.Parent = Btn

    Btn.MouseButton1Click:Connect(function()
        callback(name)
    end)
end

--// Fill Tabs
local PetTab = CreateTab("Pets")
for _, pet in ipairs(Spawner.GetPets()) do
    CreateItemButton(PetTab, pet, function(p) Spawner.SpawnPet(p) end)
end

local SeedTab = CreateTab("Seeds")
for _, seed in ipairs(Spawner.GetSeeds()) do
    CreateItemButton(SeedTab, seed, function(s) Spawner.SpawnSeed(s) end)
end

local EggTab = CreateTab("Eggs")
for _, egg in ipairs(Spawner.GetEggs()) do
    CreateItemButton(EggTab, egg, function(e) Spawner.SpawnEgg(e) end)
end

-- Show Pets tab by default
Tabs["Pets"].Frame.Visible = true

--// Minimize
local minimized = false
MinimizeButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    Frame.Size = minimized and UDim2.new(0, 350, 0, 40) or UDim2.new(0, 350, 0, 300)
end)
